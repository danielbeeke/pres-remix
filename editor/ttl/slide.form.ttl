@prefix form:         <http://rdf.danielbeeke.nl/form/form-dev.ttl#> .
@prefix slideForm:    <https://localhost:3000/ttl/slide.form.ttl#> .
@prefix slide:        <https://localhost:3000/ttl/slide.ttl#> .

slideForm:
    form:binding      slide:Slide ;
    form:label        "slide"@en ;
    a                 form:Form .

slideForm:subTitle
    a                 form:Field ;
    form:widget       "string" ;
    form:label        "Sub title"@en ;
    form:binding      slide:subTitle ;
    form:order        1 .

slideForm:title
    a                 form:Field ;
    form:widget       "string" ;
    form:label        "Title"@en ;
    form:binding      slide:title ;
    form:order        2 .

slideForm:body
    a                 form:Field ;
    form:widget       "textarea" ;
    form:label        "Body"@en ;
    form:binding      slide:body ;
    form:rows         10 ;
    form:order        3 .

slideForm:image
    a                 form:Field ;
    form:widget       "url-image" ;
    form:label        "Image"@en ;
    form:binding      slide:image ;
    form:order        4 .

slideForm:layout
    a                 form:Field ;
    form:widget       "dropdown" ;
    form:default      "one-third-picture" ;
    form:option       ([
        form:value    "full-picture" ;
        form:label    "Full picture" ;
    ] [
        form:value    "one-third-picture" ;
        form:label    "One third picture" ;
    ] [
        form:value    "two-thirds-picture" ;
        form:label    "Two thirds picture" ;
    ]) ;
    form:label        "Layout"@en ;
    form:binding      slide:layout ;
    form:order        5 .
